{
  "name": "workout-tracker",
  "version": "1.0.0",
  "description": "Workout tracker with MongoDB",
  "main": "server.js",
  "scripts": {
    "build:utils": "esbuild scripts/wakeLock.src.js --bundle --outfile=public/js/utils/wakeLock.js --platform=browser",
    "build:timer": "esbuild scripts/timerService.src.js --bundle --outfile=public/js/utils/timerService.js --platform=browser",
    "watch": "node scripts/watch.js",
    "start": "npm run build:utils && npm run build:timer && npm run generate-version && node server.js",
    "dev": "npm run build:utils && npm run build:timer && npm run generate-version && nodemon server.js",
    "generate-version": "node scripts/generate-version.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.0.0",
    "sharp": "^0.34.5",
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/local-notifications": "^6.0.0",
    "@capawesome-team/capacitor-android-foreground-service": "^6.0.0",
    "@capacitor-community/native-audio": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "esbuild": "^0.20.0",
    "js-beautify": "^1.15.4",
    "nodemon": "^3.0.1"
  }
}